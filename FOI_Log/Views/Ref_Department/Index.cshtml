@model IEnumerable<FOI_Log.Models.Ref_Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<h4 style="text-align:center">Departments List</h4>
<hr />
<p style="text-align:right">
    @Html.ActionLink("Add new Department", "Create", null, new { style = "color:White", @class = "btn btn-warning" })
</p>

<table id="table_id" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days_to_Respond)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Department_Email)
            </th>*@
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days_to_Respond)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Department_Email)
            </td>*@
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Department_Code }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Department_Code }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Department_Code })*@

                <a class="btn btn-mini btn-success icon-eye-open bigger-120 " id="@item.Department_Code" href="@Url.Action("Edit", new { id = item.Department_Code })">
                    <i class="glyphicon glyphicon-edit"></i> Edit
                    <span class="sr-only">Edit</span>
                </a>
                @*<a class="btn btn-mini btn-info icon-edit bigger-120 " id="@item.Department_Code" href="@Url.Action("Details", new { id = item.Department_Code })">
                    <i class="glyphicon glyphicon-info-sign"></i> Details
                    <span class="sr-only">Details</span>
                </a>*@

                @*<a class="btn btn-mini btn-danger icon-trash bigger-120 " id="@item.Department_Code" href="@Url.Action("Delete", new { id = item.Department_Code})">
                    <i class="glyphicon glyphicon-info-sign"></i> Delete
                    <span class="sr-only">Delete</span>
                </a>*@
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")

    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/css/dataTables.bootstrap4.min.css">

    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/dataTables.fixedHeader.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable({

                "iDisplayLength": 20, //display 100 entries as default
                "order": [[1, "asc"]]
                //"aoColumnDefs": [
                // disables the sort in one row { "bSortable": false, "aTargets": [5] }
                //]
            });
        });

    </script>

}