@model IEnumerable<FOI_Log.Models.Ref_Department_Directors_Email>

@{
    ViewBag.Title = "Index";
}

<h2>Department Directors Email List</h2>

<p>
    @Html.ActionLink("Add new Director Email", "Create")
</p>

<table id="table_id" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ref_Department.Department)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref_Department.Department)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Email_Code }) |
                @Html.ActionLink("Details", "Details", new { id = item.Email_Code }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Email_Code })
            </td>
        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")


    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable({

                "iDisplayLength": 20, //display 100 entries as default
                "order": [[1, "asc"]]
                //"aoColumnDefs": [
                // disables the sort in one row { "bSortable": false, "aTargets": [5] }
                //]
            });
        });

    </script>

}