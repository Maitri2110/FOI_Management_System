@model IEnumerable<FOI_Log.Models.Ref_Department_Managers_Email>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<h4 style="text-align:center">Manager Email List</h4>

<hr />
<p style="text-align:right">
    @Html.ActionLink("Add new Manager Email", "Create", null, new { style = "color:White", @class = "btn btn-warning" })
</p>
<table id="table_id" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ref_Department.Department)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref_Department.Department)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Email_Code }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Email_Code }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Email_Code })*@

                <a class="btn btn-mini btn-success icon-eye-open bigger-120 " id="@item.Email_Code" href="@Url.Action("Edit", new { id = item.Email_Code })">
                    <i class="glyphicon glyphicon-edit"></i> Edit
                    <span class="sr-only">Edit</span>
                </a>
                @*<a class="btn btn-mini btn-info icon-edit bigger-120 " id="@item.Email_Code" href="@Url.Action("Details", new { id = item.Email_Code })">
                    <i class="glyphicon glyphicon-info-sign"></i> Details
                    <span class="sr-only">Details</span>
                </a>*@

                <a class="btn btn-mini btn-danger icon-trash bigger-120 " id="@item.Email_Code" href="@Url.Action("Delete", new { id = item.Email_Code})">
                    <i class="glyphicon glyphicon-info-sign"></i> Delete
                    <span class="sr-only">Delete</span>
                </a>
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")

    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/css/dataTables.bootstrap4.min.css">

    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/dataTables.fixedHeader.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable({

                "iDisplayLength": 20, //display 100 entries as default
                "order": [[1, "asc"]]
                //"aoColumnDefs": [
                // disables the sort in one row { "bSortable": false, "aTargets": [5] }
                //]
            });
        });

    </script>

}