@model IEnumerable<FOI_Log.Models.Ref_Area_of_Interest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<h4 style="text-align:center">Area of Interest List</h4>
<hr/>

<p style="text-align:right">
    @Html.ActionLink("Add New Area of Interest", "Create", null, new { style = "color:White", @class = "btn btn-warning" })
</p>
<table id="table_id" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Area_of_Interest)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Area_of_Interest)
    </td>

    <td>

        <a class="btn btn-mini btn-success icon-eye-open bigger-120 " id="@item.Interest_Code" href="@Url.Action("Edit", new { id = item.Interest_Code })">
            <i class="glyphicon glyphicon-edit"></i> Edit
            <span class="sr-only">Edit</span>
        </a>
        @*<a class="btn btn-mini btn-info icon-edit bigger-120 " id="@item.Interest_Code" href="@Url.Action("Details", new { id = item.Interest_Code })">
            <i class="glyphicon glyphicon-info-sign"></i> Details
            <span class="sr-only">Details</span>
        </a>

        <a class="btn btn-mini btn-danger icon-trash bigger-120 " id="@item.Interest_Code" href="@Url.Action("Delete", new { foiref = item.Interest_Code})">
            <i class="glyphicon glyphicon-info-sign"></i> Delete
            <span class="sr-only">Delete</span>
        </a>*@
    </td>
</tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")


    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

    <script type="text/javascript">

        $(document).ready(function () {
            $('#table_id').DataTable({

                "iDisplayLength": 20, //display 100 entries as default
                "order": [[1, "asc"]]
                //"aoColumnDefs": [
                // disables the sort in one row { "bSortable": false, "aTargets": [5] }
                //]
            });
        });

    </script>

}