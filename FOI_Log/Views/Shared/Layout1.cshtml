<body>
    <div class="wrapper">

        <nav id="sidebar" >
            <div class="sidebar-header">
                <span style="font-size:12px;">Welcome, @ViewBag.givenname</span>
               
            </div>

            <ul class="list-unstyled components">
                <li class="@ViewBag.FOICreateActive">
                    <a href="~/CombinedModel/FOICreate">
                        <i class="fas fa-home"></i>
                        New FOI
                    </a>

                </li>
                <li class="@ViewBag.FOIInProgressActive">

                    <a href="~/CombinedModel/FOIList">
                        <i class="fas fa-briefcase"></i>
                        FOIs In Progress (@ViewBag.FOIInProgress)
                    </a>

                </li>
                <li class="@ViewBag.CompletedActive">
                    <a href="~/CombinedModel/CompletedFOIList">
                        <i class="fas fa-copy"></i>
                        Completed FOIs (@ViewBag.FOICompleted)
                    </a>
                </li>
                <li>
                    <a href="https://svwltpbi1.intranet.ngh.nhs.uk/Reports/powerbi/Published/Public/FOI?rs:embed=true" target="_blank">
                        <i class="fas fa-chart-area"></i>
                        Dashboard
                    </a>
                </li>


                <li class="@ViewBag.Admin">

                    <a class="Collapse" id="Collapse" href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">
                        @*<a class="dropdown-toggle" id="Collapse" href="#" data-toggle="collapse" aria-expanded="false" onclick="majorpointsexpand($('.majorpointslegend').html())">*@
                        <i class="fas fa-users-cog"></i>
                        @*<p class="majorpointslegend">Admin Panel</p>*@
                        Admin Panel
                        <i class="fas fa-caret-down" style="text-align:right"></i>
                    </a>
                    
                    <ul class="list-unstyled collapse" id="pageSubmenu" @*style="display:none;"*@>
                        <li class="@ViewBag.DepartmentActive">

                            <a href="~/Ref_Department/Index">
                                <i class="fas fa-tasks"></i>&nbsp;
                                Manage Department
                            </a>
                        </li>
                        <li class="@ViewBag.ManagersActive">
                            <a href="~/Ref_Department_Managers_Email/Index">
                                <i class="fas fa-envelope-open"></i>&nbsp;
                                Manage Managers
                            </a>
                        </li>
                        <li class="@ViewBag.AreOfInterestActive">
                            <a href="~/Ref_Area_Of_Interest/Index">
                                <i class="fas fa-hospital"></i>&nbsp;
                                Manage Area Of Interest
                            </a>
                        </li>
                        <li class="@ViewBag.RefStatusActive">
                            <a href="~/Ref_Status/Index">
                                <i class="fas fa-comment-dots"></i>&nbsp;
                                Manage Reference Status
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
      
        <div id="content">
            <div class="navbar navbar-inverse navbar-fixed-top" @*style="background-color: #005EB8;"*@>
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" id="sidebarCollapse" class="btn btn-info" style="background-color:darkslategray !important">
                            <i class="fas fa-align-left"></i>
                            <span></span>
                        </button>

                        @Html.ActionLink("Freedom Of Information Management Tool", "Index", "Home", new { area = "" }, new
                        {
                            @class = "navbar-brand"})
                    </div>
                  
                    <img style="width: 175px;float:right" src="@Url.Content("~/Content/images/NGHLogo-Cropped-277x70.png")" alt="Card image cap">

                </div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">


                    <div class="container-fluid body-content">
                        @RenderBody()
                        <hr />
                        <!--  <footer>
                                  <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                              </footer>-->
                    </div>
                </div>

            </nav>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")


    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
